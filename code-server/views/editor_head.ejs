            }, function(result) {
                alert(result);
                if (result) {
                    if (location.href === document.referrer || !document.referrer) {
                        location.href = "/";
                        alert("same");
                    } else {
                        location.href = document.referrer;
                    }
                }
            });
        }

    </script>
